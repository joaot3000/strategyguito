# ======== REQUIRED CORE SETTINGS ========
# Email Configuration (Gmail recommended)
EMAIL_ADDRESS="your_email@gmail.com"
EMAIL_PASSWORD="your_app_specific_password"  # 16-digit Google App Password

# Alpaca API Credentials
ALPACA_API_KEY="PKxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
ALPACA_SECRET_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# ======== TRADING PARAMETERS ========
# Stock/ETF Symbol to trade (default: SPY)
TRADE_SYMBOL="SPY"

# Trade Quantity (use either shares OR dollar amount)
TRADE_QUANTITY="1"       # Whole shares
# TRADE_QUANTITY="500"   # OR dollar amount for fractional shares

# Safety Limits
MAX_TRADE_SIZE="10000"   # Max dollar amount per trade

# ======== OPTIONAL SETTINGS ========
# Email Server (default: Gmail)
IMAP_SERVER="imap.gmail.com"

# Trading Mode (default: paper trading)
PAPER_TRADING="true"     # Set to "false" for live trading

# Advanced Configuration
POLL_INTERVAL="10"       # Seconds between email checks
